{
  "name": "trovo-backend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "engines": {
    "node": "20"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc -p tsconfig.json && node -e \"require('fs').writeFileSync('dist/package.json', JSON.stringify({type:'module',engines:{node:'20'}}, null, 2))\"",
    "start": "NODE_ENV=production node dist/index.js",
    "dispatch:local": "node scripts/dispatchPending.mjs",
    "serve": "firebase emulators:start --only functions",
    "deploy": "firebase deploy --only functions",
    "deploy:render": "git push render main"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.19.2",
    "firebase": "^12.7.0",
    "firebase-admin": "^13.6.0",
    "firebase-functions": "^7.0.2",
    "helmet": "^7.2.0",
    "nodemailer": "^7.0.11",
    "pino": "^9.5.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^22.7.4",
    "@types/nodemailer": "^6.4.15",
    "nodemon": "^3.1.11",
    "pino-pretty": "^11.2.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.21.0",
    "typescript": "^5.6.3"
  }
}